@model AgriEnergyConnect.Models.Farmer

@{
    ViewData["Title"] = "Farmer Profile";
}

<h2>Farmer Profile</h2>

<div>
    <h4>Profile Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Cell</dt>
        <dd class="col-sm-10">@Model.Cell</dd>

        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>
    </dl>
</div>

<div>
    <h4>Products</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Description</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.PoductName</td>
                    <td>@product.ProductDes</td>
                    <td>@product.Catergry</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="AddProduct" asp-route-email="@Model.Email" class="btn btn-primary">Add New Product</a>
</div>
